<%= f.error_notification %>
  <%= f.input :first_name, :required => true, placeholder: 'First Name' %>
  <%= f.input :last_name, :required => true, placeholder: 'Last Name' %>
  <%= f.input :email, placeholder: 'Enter your Email' %>
  <%= f.input :number, placeholder: 'Enter your Mobile Number' %>
  <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12, discard_day: true,
                              order: [:month, :year] %>
  <%= f.input :gender, as: :radio_buttons,
    collection: ["Male", "Female"] %>
  <%= f.submit ("Sign Up")%>
