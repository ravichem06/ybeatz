<% @page_title = "Admin Panel | Forums" %>
<div class="st-content">
  <div class="container">
    <%= render 'shared/panel_sidemenu' %>

    <div class="col-md-8">
      <div class="editor-panel" style="margin-top: 50px; margin-bottom: 50px;">
        <h1>Forums</h1>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @forums.each do |forum| %>
                <tr>
                  <td><%= forum.name %></td>
                  <td><%= forum.description %></td>
                  <td><%= link_to 'Show', forum %></td>
                  <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
                  <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
          <br>

          <%= link_to 'New Forum', new_forum_path %>

      </div>
    </div>
  </div>
</div>


