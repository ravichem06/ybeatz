<%= stylesheet_link_tag    "https://s3-ap-southeast-1.amazonaws.com/ybeatz/assets/stylesheets/all.css" %>
 <%= stylesheet_link_tag    "https://s3-ap-southeast-1.amazonaws.com/ybeatz/assets/stylesheets/app.css" %>

<% @page_title = "Login" %>


<body class="login">

  <div id="content">
    <div class="container-fluid">

      <div class="lock-container">
        <h1>Log in</h1>
        <div class="panel panel-default text-center">
          
          <div class="panel-body">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    		<%= f.input :email, required: false, autofocus: true %>
   			<%= f.input :password, required: false %>
    		<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  
    		<%= f.button :submit, "Log in" , :class	=> "btn btn-primary"%>
  
			<% end %>

            <%= render "devise/shared/links" %>
            
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <strong>YBeatz</strong> &copy; Copyright 2015
    <div class="bottom-menu" style="float: right; padding-right: 40px;">
     <%= link_to 'Home', root_path %>
    </div>
  </footer>
  
</body>



