<%= stylesheet_link_tag    "https://s3-ap-southeast-1.amazonaws.com/ybeatz/assets/stylesheets/all.css" %>
 <%= stylesheet_link_tag    "https://s3-ap-southeast-1.amazonaws.com/ybeatz/assets/stylesheets/app.css" %>

<% @page_title = "Sign Up" %>

<body class="login">

  <div id="content">
    <div class="container-fluid">
       <div class="lock-container">
        <h1>Create a new account</h1>
        <div class="panel panel-default text-center">
          
          <div class="panel-body">
          

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <div class="alert alert-danger">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <%= devise_error_messages! %>
            </div>
    
    
    <div class="form-group">
      
      <%= f.text_field :name, :autofocus => true, class: 'form-control', :placeholder=> 'Your First Name', :required => true%>
    </div>
    <div class="form-group">
      
      <%= f.text_field :surname,  class: 'form-control', :placeholder=> 'Your Surname...', :required => true %>
    </div>
    <div class="form-group">
      
      <%= f.email_field :email, class: 'form-control', :placeholder=> 'Your Email...', :required => true %>
    </div>
    <div class="form-group">
      
      <%= f.password_field :password, class: 'form-control', :placeholder=> 'Your Password...', :required => true %>
    </div>
    <div class="form-group">
      
      <%= f.password_field :password_confirmation, class: 'form-control', :placeholder=> 'Confirm your Password...', :required => true %>
    </div>

    <div class="form-group">

  <%= f.label 'Add a Profile avatar' %>
  <%= f.file_field :avatar %>

  </div>

    </div>
     <%= f.submit 'Sign up', :class => 'btn btn-primary' %>
  <% end %>

<%= render "devise/shared/links" %>
</div>
        </div>
      </div>

    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <strong>YBeatz</strong> &copy; Copyright 2015
    <div class="bottom-menu" style="float: right; padding-right: 40px;">
     <%= link_to 'Home', root_path %>
    </div>
  </footer>
  </body>