<title>YBeatz | Sign Up</title>

<body class="login">

  <div id="content">
    <div class="container-fluid">

      <div class="lock-container">
        <h1>Sign Up</h1>
        <div class="panel panel-default text-center">
          
          <div class="panel-body">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  

  
    <%= f.input :email, :label => false, required: true, autofocus: true, :placeholder => "Enter your Email" %>
    <form class="form-inline">
    <div class="form-group">
    <%= f.input :name, :label => false, required: true,  :placeholder => "Name" %>
    <%= f.input :surname, :label => false, required: true, :placeholder => "Surname" %>
    </div>
    </form>
    <%= f.input :password, required: true, :label => false, :placeholder => "Enter your Password" %>
    <%= f.input :password_confirmation, required: true, :label => false, :placeholder => "Confirm your password"  %>
  

  
    <%= f.button :submit, "Sign up" %>
  
<% end %>

<%= render "devise/shared/links" %>
</div>
        </div>
      </div>

    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <strong>YBeatz</strong> &copy; Copyright 2015
  </footer>
  </body>