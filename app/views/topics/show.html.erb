     <div class="heading"><h1><%= @topic.name %></h1></div>
        <div class="container">
          <div class="row">
            <div class="row">
              
            </div>
            <!-- <div class="row">
              <%#= link_to 'Join the discussion', new_post_path, :class => "new-topic" %>
            </div> -->
          <% unless @post.empty? %>
          <% @post.each do |post| %>
            <div class="row" style="margin: 30px;">
              <div class="col-md-2">
                <div class="author-avatar">
                <% if post.member.present? %>
                  <%= image_tag post.member.avatar.url(:medium),  :style => "width: 100px; height: 100px; border-radius: 50%;"  %>
                <% else %>
                  <%= image_tag "https://s3-ap-southeast-1.amazonaws.com/ybeatz/assets/images/avatar/no-avatar.jpg",  :style => "width: 100px; height: 100px; border-radius: 50%;"  %>
                <% end %>
                </div>
                <div class="author">
                  <%= post.member.name + " " + post.member.surname if post.member.present? %>
                </div>
              </div>
              <div class="col-md-10">
              <div class="forum-reply">
                <div class="row">
                  <h3 style="color: #B0B0B0;"> <%= post.subject %> </h3>
                  <hr>
                  <div class="post-content">
                     <p><%= post.body %></p>
                  </div>
                  <hr>
                  <div class="post-footer">
                    <%= post.created_at.strftime("%-d %^B, %Y at %H:%M") %> 
                  </div>
                </div>
                </div>
              </div>
            </div>
            <!-- <div class="row" style="margin-bottom: 35px;">
              <%#= link_to 'Join the discussion', new_post_path, :class => "new-topic" %>
            </div> -->
            <% end %>
            <% end %>
          </div>

          <div class="row">
            <div class="col-md-4 col-md-offset-4" style="padding-left: 85px;">

              <div class="pagination" >
                <%= will_paginate @post, renderer: BootstrapPagination::Rails %>
              </div>
            </div>
          </div>
        

<br/>

<%= render 'posts/post' %>

</div>

     

