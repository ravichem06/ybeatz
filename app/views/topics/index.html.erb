  <% @page_title = "Forum" %>
  <div class="heading">
    <span class = "fa fa-envelope fa-5x"><h1><strong>Forum</strong></h1>
    </span>
  </div>

  <div class="row">
    <div class="col-md-9">
         <%= link_to 'Post a new topic', new_topic_path, :class => "new-topic" %> 

        <div class="panel panel-forum">

               <div class="panel-heading" style="background-color: #175C84; color: #fff;">
              Category with Password and locked forums</div>
             <div class="panel-inner">
            <table class="footable table table-striped table-primary table-hover footable-loaded tablet">
            <thead>
                  <tr>
               <th data-class="expand" class="footable-visible footable-first-column">Topics</th>
               <th class="large110 footable-visible" data-hide="phone">Replies</th>
               <th class="large21 footable-visible footable-last-column" data-hide="phone">Last post</th>
              </tr>
              
            </thead>
            <tbody>
                <% @topics.each do |forum| %> 
                  <tr style="color: #A8A8A8;">
                    <td title="No unread posts" class="expand footable-visible footable-first-column"><span class="footable-toggle"></span>
                      <span class="desc-wrapper">
                        <div class="topic">
                        <%=link_to forum.name, forum %><br></div>
                        <span class="description"><%#= forum.description if forum.description %></span><br>                       
                      </span>
                    </td>
                    <td class="stats-col footable-visible">
                       <span class="stats-wrapper">
                       <%= forum.posts.count  %>&nbsp;Posts 
                       </span>
                    </td>

                    <td class="footable-visible footable-last-column">
                      <span class="last-wrapper text-overflow">
                                  by&nbsp;<%#= forum.member %>
                        <i class="mobile-post fa fa-sign-out"></i><br>
                        <span class="forum-time"><%= forum.updated_at %></span>        
                      </span>
                    </td>
                  </tr>
                <% end %>
            <!-- Table footer not used at the moment
              <tfoot>
                     <tr>
                        <th>Game Name</th>
                        <th>Publisher</th>
                        <th>Platform</th>
                     </tr>
                    </tfoot>
            Table footer not used at the moment -->
              
            </tbody></table>
            </div>
            </div>
           
    </div>


    <div class="col-md-3">
    </div>


  </div>
    <div class="row" style="padding-left: 15px;">
      <%= link_to 'Post a new topic', new_topic_path, :class => "new-topic" %>
    </div>
<br>


