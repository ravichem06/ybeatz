    <section id="content">
      <div class="container-event" style="padding-left: 30px;">
        <div class="row">
          <!-- events -->
          <div class="col-md-9">
            <h2>
              Upcoming <span>Events</span> 
              
            </h2>
            <div id="upcoming-events" class="grid-style">
              
       <% @events.each do |t| %>
            <div class="row">
                <div class="col-md-6 event">
                  <div class="event-image">
                    <div class="event-date">
                      <span class="day-of-month"><%= t.date.day%></span>
                      <span class="day-of-week"><%= t.date.month%></span>
                    </div>
                    <% if t.banner?%>
                                       
                    <%= image_tag t.banner.url %>
                    <%else%>
                    <%= image_tag 'banner.jpg', class: "event-banner" %>
                    <% end%>
                  </div></div>
                  <div class="col-md-6 event">
                  <h3><%= link_to t.event_name, :action => :show , :id => t.id %></h3>
                  <div class="event-location">
                    <span class="location"><i class="fa fa-map-marker"></i> <%= t.venue%>, <%= t.city%>, <%= t.state%>, <%= t.country%></span>
                    <span class="time"><i class="fa fa-clock-o"></i> 10:28 pm - 06:00 am</span>
                  </div>
                  <p>
                    <%= t.description%>
                  </p>
                  
                  <%= link_to  'Event Details', :action => :show, :class => "watch-live", :id => t.id %>
                  
                  
                </div>
               </div> 
            <% end %>
                

            <ul class="events-pagination pagination">
              <li class="current"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
            </ul>
          </div>
          </div>
          </div>
          </section>
