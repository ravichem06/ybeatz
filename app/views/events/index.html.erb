<h1>Listing Events</h1>
<div class="timeline row" data-toggle="isotope">
              <div class="col-xs-12 col-md-6 col-lg-4 item">
                <div class="timeline-block">
                  <div class="panel panel-default share clearfix-xs">
                    <div class="panel-heading panel-heading-gray title">
                      What&acute;s new
                    </div>


                    <%= simple_form_for :event, :url=> {:controller =>'events',:action => 'create'} do |f| %>
                    <div class="panel-body">
                      <%= f.input :description, :placeholder => 'Share your status...',:as => :text , :required => false, :label => false, :class => "form-control share-text"%>
                      <!-- <textarea name="status" class="form-control share-text" rows="3" placeholder="Share your status..."></textarea> -->
                    </div>
                    <div class="panel-footer share-buttons">
                      <a href="#"><i class="fa fa-map-marker"></i></a>
                      <a href="#"><i class="fa fa-photo"></i></a>
                      <a href="#"><i class="fa fa-video-camera"></i></a>
                      <%= f.button :submit , 'Create', :class => "btn btn-primary btn-xs pull-right"%>
                      <!-- <button type="submit" class="btn btn-primary btn-xs pull-right" href="#">Post</button> -->
                    </div>
                    <% end %>
                  </div>
                </div>
              </div>
              
              </div>
<section class="page-section">
  <div class="container">

    
          <div class="row thumbnails events isotope isotope-items" style="position: relative; overflow: hidden; height: 100%;">
          
          <% @events.each do |event| %>
          
      <div class="col-md-3 col-sm-6 isotope-item" style="position: relative; left: 0px; top: 0px; transform: translate3d(0px, 0px, 0px);">
        <div class="thumbnail no-border no-padding">
          <div class="media">
            <a href="/events.html#" class="like"><i class="fa fa-heart"></i></a>
            <div class="date"><span><%= event.date%></span></div>
            <img src="https://s3-ap-southeast-1.amazonaws.com/ybeatz/assets/images/backgrounds/first.jpeg" alt="">
            <div class="caption hovered"></div>
          </div>


                            <div class="caption">
                              <h3 class="caption-title"><a href="/events.html#"><%= event.event_name %></a></h3>
                              
                              <p class="caption-category"><i class="fa fa-file-text-o"></i><%= event.created_at%><i class="fa fa-map-marker"></i><%= event.place%></p>

                              <p class="caption-price">Tickets from $49,99</p>

                              <p class="caption-text">Fusce pellentesque velvitae tincidunt egestas. Pellentesque habitant morbi.</p>

                              <p class="caption-more"><a href="/events.html#" class="btn btn-theme">Tickets &amp; details</a></p>
                            </div>
                          </div>
                        </div>
                      
                           <% end %>
                            
                            </div>
                          

                            <div class="text-center margin-top"><a data-animation="fadeInUp" data-animation-delay="100" href="http://eazzy.me/html/imevent-multipage/index-2.html#" class="btn btn-theme btn-theme-grey-dark btn-theme-md animated fadeInUp visible"><i class="fa fa-file-text-o"></i>See all events</a></div>
                </div>
              </section>

