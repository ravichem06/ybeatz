<p id="notice"><%= notice %></p>


<h1>Listing Communities</h1>

<div class="row">
<div class="posts-col">

<% @communities.each do |community| %>
<div class="posts ">
                <!-- <div class="col-md-4"> -->
                  <div class="posts-image">
                    <div class="posts-date">
                    
                      <span class="title"><%= community.title %></span>
                      <!-- <span class="author">Posted By: <%= community.name %></span> -->
                    
                    </div>
                    <% if community.post_image?%>
                                       
                    <%= image_tag community.post_image.url(:medium) %>
                    <%else%>
                    <%= image_tag 'banner.jpg', class: "event-banner" %>
                    <% end%>
                  </div>
                  </div>
                  <!-- </div> -->
                  <% end %>
                  </div>
                  </div>

                  
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= community.name %></td>
        <td><%= community.title %></td>
        <td><%= community.content %></td>
        <td><%= link_to 'Show', community %></td>
        <td><%= link_to 'Edit', edit_community_path(community) %></td>
        <td><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Community', new_community_path %>
