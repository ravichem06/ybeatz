


<%= stylesheet_link_tag    "bootstrap.css" %>

     
     
        
     
<div class="heading">
  <h1><strong>Post /</strong></h1>
  <p><%= link_to @community.title, :action=> :show, :id => @community.id%></p>
</div>

<div class="row" style="margin-right: 15px;">
<div class="edit-links">
<%= link_to 'Preview Post', @community %> |
<%= link_to 'Back to Community', communities_path %>
</div>
</div>

<div class="note">
  Edit Post
</div>



  <div class="edit-form ">

  

   <%= form_for(@community, :url => { :action => 'update', :member_id => current_member.id}, :html => {:class => 'form-horizontal '} ) do |f| %>
 

  <div class="form-inputs">
  <div class="hidden">
  <%= f.text_field :member_id, :placeholder => current_member.id %>
    </div>
    <%= f.label :title %><br/>
    <%= f.text_field :title,  :required => true , :class => "edit-input"%> <br/><br/>
    

    <%= f.file_field :post_image, as: :file, :label => 'Post Image' %>
    <br/>
    
    <%= f.label :content %>
    <%= f.cktext_area :content, :class => "edit-input", :as => :text, :rows => 8 %>
      
    
      </br>
      <div>
      <%= f.submit 'Submit', :class=> "edit-post-button" %> 
      
    </div>  
   
<% end %>
</div>

</div>

 



