<%= simple_form_for(@community) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>
    <%= f.input :post_image, as: :file, :required => true, :label => 'Banner Image' %>

    <%= f.input :title %>

    <%= f.input :content %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
